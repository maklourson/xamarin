<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TP1.Views.SettingsPage"
             Title="Mes paramètres">
    <ContentPage.Content>
        <TableView>
            <TableSection Title="Compte">
                <SwitchCell Text="Compte actif" On="True"></SwitchCell>
            </TableSection>
            <TableSection Title="Utilisateur">
                <EntryCell Label="Email" Keyboard="Email"></EntryCell>
                <EntryCell Label="Téléphone" Keyboard="Telephone"></EntryCell>
            </TableSection>
            <TableSection Title="Localisation">
                <SwitchCell Text="Enregistrer position" On="True"></SwitchCell>
            </TableSection>
        </TableView>
    </ContentPage.Content>
</ContentPage>