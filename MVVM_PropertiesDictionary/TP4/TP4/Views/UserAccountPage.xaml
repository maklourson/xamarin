<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:TP4.ViewModels"
             x:Class="TP4.Views.UserAccountPage"
             Title="Compte utilisateur">
    <ContentPage.BindingContext>
        <viewmodels:UserAccountViewModel></viewmodels:UserAccountViewModel>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout Padding="10">
            <StackLayout Orientation="Horizontal">
                <Label VerticalOptions="Center" HorizontalOptions="Start" Text="{Binding Email, StringFormat='Adresse email : {0}'}"></Label>
                <Button VerticalOptions="Center" HorizontalOptions="EndAndExpand" Text="Déconnexion" Command="{Binding CmdLogoff}"></Button>
            </StackLayout>
            

            <Label Text="{Binding MessageBienvenue}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>